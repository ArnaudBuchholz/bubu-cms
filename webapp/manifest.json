{
	"sap.app": {
		"id": "bubu-cms",
		"type": "application",
		"dataSources": {
			"mainService": {
				"uri": "/api/",
				"type": "OData",
				"settings": {
					"odataVersion": "2.0"
				}
			}
		}
	},
	"sap.ui5": {
		"dependencies": {
			"libs": {
				"sap.ui.core": {
					"lazy": false
				},
				"sap.m": {
					"lazy": false
				}
			}
		},
		"rootView": {
			"viewName": "bubu-cms.view.App",
			"type": "XML",
			"async": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "bubu-cms.i18n.i18n"
				}
			},
			"db.i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "bubu-cms.api.i18n"
				}
			},
			"": {
				"dataSource": "mainService",
				"settings": {
					"defaultBindingMode": "TwoWay",
					"defaultCountMode": "InlineRepeat",
					"useBatch": false
				}
			}
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "bubu-cms.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"transition": "slide",
				"async": true
			},
			"routes": [{
				"pattern": ":?query:",
				"name": "list",
				"target": "list"
			}, {
				"pattern": "record/{recordId}",
  				"name": "record",
  				"target": "record"
			}],
			"targets": {
				"list": {
					"viewName": "List",
					"viewLevel" : 1
			 	},
				"record": {
					"viewName": "Record",
					"viewLevel" : 2
			 	}
			}
		}
	}
}
