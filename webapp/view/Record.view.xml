<mvc:View
	xmlns="sap.uxap"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="bubu-cms.controller.Record"
	displayBlock="true"
>
	<ObjectPageLayout
		id="page"
		enableLazyLoading="false"
		showTitleInHeaderContent="true"
		showHeaderContent="true"
		useIconTabBar="true"
		headerContentPinnable="false"
		toggleHeaderOnTitleClick="false"
	>
		<headerTitle>
			<ObjectPageDynamicHeaderTitle areaShrinkRatio="0:1:1">
				<expandedHeading>
					<m:ObjectHeader
						title="{name}"
						icon="{parts: ['type', 'icon'], formatter: '.formatIcon'}"
						iconDensityAware="false"
						width="100%"
					/>
				</expandedHeading>
				<snappedHeading>
					<m:ObjectHeader
						title="{name}"
						icon="{parts: ['type', 'icon'], formatter: '.formatIcon'}"
						iconDensityAware="false"
						width="100%"
					/>
				</snappedHeading>
				<navigationActions>
					<ObjectPageHeaderActionButton icon="sap-icon://nav-back" press="onBack" type="Transparent" />
					<ObjectPageHeaderActionButton icon="sap-icon://present" type="Transparent" />
				</navigationActions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent>
			<layout:VerticalLayout>
				<m:ObjectStatus visible="{= ${number} !== '' }" text="{number} {path: 'type', formatter: '.formatNumberUnit'}"/>
				<m:ObjectStatus title="{path: 'type', formatter: '.formatStatus1'}" visible="{= ${statusState1} !== '' }" text="{statusText1}" state="{= ${statusState1} || 'None' }" />
				<m:ObjectStatus title="{path: 'type', formatter: '.formatStatus2'}" visible="{= ${statusState2} !== '' }" text="{statusText2}" state="{= ${statusState2} || 'None' }" />
				<m:RatingIndicator maxValue="5" class="sapUiSmallMarginBottom" value="{rating}" iconSize="32px" tooltip="Rating Tooltip" />
				<m:MultiInput id="tags" showValueHelp="true" tokens="{tags>/list}">
					<m:tokens>
						<m:Token editable="{tags>editable}" key="{tags>id}" text="#{tags>id}" />
					</m:tokens>
				</m:MultiInput>
			</layout:VerticalLayout>
		</headerContent>
		<sections>
			<ObjectPageSection id="htmlContent" visible="true">
				<subSections>
					<ObjectPageSubSection>
						<core:HTML  />
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>
