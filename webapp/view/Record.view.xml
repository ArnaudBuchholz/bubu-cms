<mvc:View
	xmlns="sap.uxap"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="bubu-cms.controller.Record"
	displayBlock="true"
>
	<ObjectPageLayout
		id="page"
		enableLazyLoading="false"
		showTitleInHeaderContent="true"
		showHeaderContent="true"
		useIconTabBar="true"
		headerContentPinnable="false"
		toggleHeaderOnTitleClick="false"
	>
		<headerTitle>
			<ObjectPageHeader
				objectImageURI="{parts: ['type', 'icon'], formatter: '.formatIcon'}"
			  objectTitle="{name}"
			  isObjectTitleAlwaysVisible="false"
			  isObjectSubtitleAlwaysVisible="false"
			>
				<actions>
					<ObjectPageHeaderActionButton icon="sap-icon://nav-back" press="onBack" type="Transparent" />
					<ObjectPageHeaderActionButton icon="sap-icon://present" type="Transparent" />
				</actions>
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			<layout:VerticalLayout>
				<m:ObjectStatus visible="{= ${number} !== '' }" text="{number} {path: 'type', formatter: '.formatNumberUnit'}"/>
				<m:ObjectStatus title="{path: 'type', formatter: '.formatStatus1'}" visible="{= ${statusState1} !== '' }" text="{statusText1}" state="{= ${statusState1} || 'None' }" />
				<m:ObjectStatus title="{path: 'type', formatter: '.formatStatus2'}" visible="{= ${statusState2} !== '' }" text="{statusText2}" state="{= ${statusState2} || 'None' }" />
				<m:RatingIndicator maxValue="5" class="sapUiSmallMarginBottom" value="{rating}" iconSize="32px" tooltip="Rating Tooltip" />
			</layout:VerticalLayout>
		</headerContent>
		<sections>
			<ObjectPageSection id="tagsSection" title="{i18n>record.section.tags}">
				<subSections>
					<ObjectPageSubSection>
						<m:List
							id="tagList"
							items="{tags>/list}"
						>
							<m:StandardListItem
								type="Navigation"
								title="{tags>name}"
								press="onTagPress"
							/>
						</m:List>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>
