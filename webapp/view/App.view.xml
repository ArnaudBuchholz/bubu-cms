<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="bubu-cms.controller.App"
	displayBlock="true"
>
	<Shell>
		<App>
			<Page title="{i18n>page.title}" backgroundDesign="Solid">
				<subHeader>
					<Toolbar>
						<SearchField id="searchInput" liveChange="onSearch" width="100%" />
					</Toolbar>
				</subHeader>
				<content>
					<List id="records"
						items="{/RecordSet}"
						mode="None"
						growing="true"
						growingScrollToLoad="true"
						showNoData="true"
						showSeparators="None"
						rememberSelections="false"
						noDataText="{i18n>list.nodata}"
					>
						<ObjectListItem
							title="{name}"
							icon="{parts: ['type', 'icon'], formatter: '.formatIcon'}"
							number="{number}"
							numberUnit="{path: 'type', formatter: '.formatNumberUnit'}"
							detailPress="onRecordPress"
							type="Navigation"
						>
							<firstStatus>
								<ObjectStatus title="{path: 'type', formatter: '.formatStatus1'}" visible="{= ${statusState1} !== '' }" text="{statusText1}" state="{= ${statusState1} || 'None' }" />
							</firstStatus>
							<secondStatus>
								<ObjectStatus title="{path: 'type', formatter: '.formatStatus2'}" visible="{= ${statusState2} !== '' }" text="{statusText2}" state="{= ${statusState2} || 'None' }" />
							</secondStatus>
							<attributes>
								<ObjectAttribute title="{i18n>attribute.rating}" text="{path: 'rating', formatter: '.renderRating'}" visible="{= ${rating} > 0 }" />
								<ObjectAttribute title="{i18n>attribute.tags}" text="{tags}" visible="{= !!${tags} }"/>
							</attributes>
<!--
							<markers>
								<ObjectMarker type="Flagged" />
								<ObjectMarker type="Favorite" />
								<ObjectMarker type="Locked" />
								<ObjectMarker type="Unsaved" />
							</markers>
-->
						</ObjectListItem>
					</List>
				</content>
			</Page>
		</App>
	</Shell>
</mvc:View>
