<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	controllerName="bubu-cms.controller.App"
	displayBlock="true"
>
	<Shell>
		<App>
			<Page title="{i18n>page.title}" backgroundDesign="Solid">
				<subHeader>
					<Toolbar>
						<SearchField id="searchInput" liveChange="onSearch" width="100%" />
					</Toolbar>
				</subHeader>
				<content>
					<List id="records"
						items="{/RecordSet}"
						mode="None"
						growing="true"
						growingScrollToLoad="true"
						showNoData="true"
						showSeparators="None"
						rememberSelections="false"
						noDataText="{i18n>list.nodata}"
					>
						<ObjectListItem
							title="{name}"
							icon="{icon}"
							number="{number}"
							numberUnit="{numberUnit}"
							detailPress="onRecordPress"
							type="Navigation"
						>
							<firstStatus>
								<ObjectStatus title="title1" text="text1" state="Success" />
							</firstStatus>
							<secondStatus>
								<ObjectStatus title="title2" text="text2" state="Error" />
							</secondStatus>
							<attributes>
								<ObjectAttribute title="Rating" text="{path: 'rating', formatter: '.renderRating'}" />
								<ObjectAttribute title="Tags" text="test sample db record very long tag list to check truncation" />
							</attributes>
							<markers>
								<ObjectMarker type="Flagged" />
								<ObjectMarker type="Favorite" />
								<ObjectMarker type="Locked" />
								<ObjectMarker type="UnsavedBy" />
							</markers>
						</ObjectListItem>
					</List>
				</content>
			</Page>
		</App>
	</Shell>
</mvc:View>
