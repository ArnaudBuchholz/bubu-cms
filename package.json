{
  "name": "bubu-cms",
  "version": "0.9.1",
  "private": true,
  "description": "Small, simple & flat CMS for bubu's family",
  "main": "./dist/src/index.js",
  "files": [
    "dist/**/*.js",
    "dist/*.js"
  ],
  "bin": {
    "bubu-cms": "./dist/src/index.js"
  },
  "scripts": {
    "start": "node ./dist/src/index.js",
    "debug": "node --inspect-brk ./dist/index.js",
    "lint": "ts-standard --fix",
    "test": "jest",
    "test:api": "jest",
    "test:ui": "ui5-test-runner -webapp:src/ui/webapp",
    "test:debug": "jest --runInBand",
    "build": "npm-run-all build:tsc build:ui5.types build:ui5.ts build:ui5",
    "build:tsc": "tsc --project tsconfig-build.json",
    "build:ui5.types": "ncp src/types src/ui/src/types",
    "build:ui5.ts": "babel src/ui/src --out-dir src/ui/webapp --source-maps inline --extensions \".ts,.js\" --copy-files && replace UI5_CDN https://ui5.sap.com/1.97.0 src/ui/webapp --include=*.html -r",
    "build:ui5": "ui5 build --dest ./dist/ui --clean-dest",
    "watch": "npm-watch"
  },
  "watch": {
    "build:ui5.ts": {
      "patterns": [
        "src/ui/src"
      ],
      "extensions": "ts,xml,json"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArnaudBuchholz/bubu-cms.git"
  },
  "author": "Arnaud Buchholz <arnaud.buchholz@free.fr> (http://gpf-js.blogspot.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArnaudBuchholz/bubu-cms/issues"
  },
  "homepage": "https://github.com/ArnaudBuchholz/bubu-cms/",
  "dependencies": {
    "colors": "^1.4.0",
    "mime": "^3.0.0",
    "nanoid": "^3.1.31",
    "reserve": "^1.12.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.4",
    "@babel/plugin-transform-flow-strip-types": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@sapui5/ts-types-esm": "^1.97.0",
    "@types/colors": "^1.2.1",
    "@types/jest": "^27.0.3",
    "@types/jquery": "^3.5.10",
    "@types/node": "^16.11.12",
    "@types/qunit": "^2.11.2",
    "@ui5/cli": "^2.14.1",
    "babel-preset-transform-ui5": "^7.0.5",
    "jest": "^27.4.3",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "replace": "^1.2.1",
    "ts-jest": "^27.1.1",
    "ts-standard": "^11.0.0",
    "typescript": "^4.5.2",
    "ui5-test-runner": "^1.1.3"
  },
  "ts-standard": {
    "env": [
      "node",
      "jest"
    ],
    "project": "./tsconfig.json",
    "ignore": [
      ".vscode/",
      "./dist/",
      "./test/"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "\\.helper\\.ts$",
      "\\.js$"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "sqlite\\.ts$",
      "./src/index\\.ts",
      "./src/ui/.*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
