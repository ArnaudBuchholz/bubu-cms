{
  "name": "bubu-cms",
  "version": "0.9.1",
  "private": true,
  "description": "Small, simple & flat CMS for bubu's family",
  "directories": {},
  "scripts": {
    "start": "node ./dist/index.js",
    "debug": "node --inspect-brk ./dist/index.js",
    "lint": "ts-standard --fix",
    "test": "jest",
    "test:api": "jest",
    "test:ui": "ui5-test-runner -webapp:src/ui/webapp",
    "test:debug": "jest --runInBand",
    "build": "npm-run-all build:tsc build:ui5.ts build:ui5",
    "build:tsc": "tsc --project tsconfig-build.json",
    "build:ui5.ts": "ncp src/types src/ui/src/types && babel src/ui/src --out-dir src/ui/webapp --source-maps inline --extensions \".ts,.js\" --copy-files && replace UI5_CDN https://ui5.sap.com/1.94.0 src/ui/webapp --include=*.html -r",
    "build:ui5": "ui5 build --dest ./dist/ui --clean-dest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArnaudBuchholz/bubu-cms.git"
  },
  "author": "Arnaud Buchholz <arnaud.buchholz@free.fr> (http://gpf-js.blogspot.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArnaudBuchholz/bubu-cms/issues"
  },
  "homepage": "https://github.com/ArnaudBuchholz/bubu-cms/",
  "dependencies": {
    "colors": "^1.4.0",
    "mime": "^2.5.2",
    "nanoid": "^3.1.28",
    "reserve": "^1.11.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@sapui5/ts-types-esm": "^1.94.0",
    "@types/colors": "^1.2.1",
    "@types/jest": "^27.0.2",
    "@types/jquery": "^3.5.6",
    "@types/node": "^16.10.2",
    "@types/qunit": "^2.11.2",
    "@ui5/cli": "^2.12.1",
    "babel-preset-transform-ui5": "^7.0.5",
    "jest": "^27.2.4",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "replace": "^1.2.1",
    "ts-jest": "^27.0.5",
    "ts-standard": "^10.0.0",
    "typescript": "^4.4.3",
    "ui5-test-runner": "^1.0.7"
  },
  "ts-standard": {
    "env": [
      "node",
      "jest"
    ],
    "project": "./tsconfig.json",
    "ignore": [
      ".vscode/",
      "./dist/",
      "./test/"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "\\.helper\\.ts$",
      "\\.js$"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/types/*.ts",
      "./src/storages/*.ts",
      "./src/api/*.ts",
      "./src/util/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "sqlite\\.ts$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
