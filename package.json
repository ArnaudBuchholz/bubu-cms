{
  "name": "bubu-cms",
  "version": "0.9.1",
  "private": true,
  "description": "Small, simple & flat CMS for bubu's family",
  "main": "./dist/src/index.js",
  "files": [
    "dist/**/*.js",
    "dist/*.js"
  ],
  "bin": {
    "bubu-cms": "./dist/src/index.js"
  },
  "scripts": {
    "start": "node ./dist/src/index.js",
    "debug": "node --inspect-brk ./dist/index.js",
    "lint": "ts-standard --fix",
    "clear-jest-cache": "jest --clearCache",
    "test": "jest",
    "test:api": "jest",
    "test:ui": "ui5-test-runner -webapp:src/ui/webapp",
    "test:debug": "jest --runInBand",
    "build": "npm-run-all build:tsc build:ui5.types build:ui5.ts build:ui5",
    "build:tsc": "tsc --project tsconfig-build.json",
    "build:ui5.types": "cpy src/types/*.ts !src/types/*.spec.ts src/ui/src/types",
    "build:ui5.ts": "babel src/ui/src --out-dir src/ui/webapp --source-maps inline --extensions \".ts,.js\" --copy-files && replace UI5_CDN https://ui5.sap.com/1.100.2 src/ui/webapp --include=*.html -r",
    "build:ui5": "ui5 build --dest ./dist/ui --clean-dest",
    "watch": "npm-watch"
  },
  "watch": {
    "build:ui5.ts": {
      "patterns": [
        "src/ui/src"
      ],
      "extensions": "ts,xml,json"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArnaudBuchholz/bubu-cms.git"
  },
  "author": "Arnaud Buchholz <arnaud.buchholz@free.fr> (http://gpf-js.blogspot.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArnaudBuchholz/bubu-cms/issues"
  },
  "homepage": "https://github.com/ArnaudBuchholz/bubu-cms/",
  "dependencies": {
    "colors": "^1.4.0",
    "mime": "^3.0.0",
    "nanoid": "^3.3.2",
    "reserve": "^1.14.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.9",
    "@babel/plugin-transform-flow-strip-types": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@sapui5/ts-types-esm": "^1.99.1",
    "@types/colors": "^1.2.1",
    "@types/jest": "^27.4.1",
    "@types/jquery": "^3.5.14",
    "@types/node": "^17.0.24",
    "@types/qunit": "^2.11.3",
    "@ui5/cli": "^2.14.8",
    "babel-preset-transform-ui5": "^7.0.5",
    "cpy": "^9.0.1",
    "cpy-cli": "^4.1.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "replace": "^1.2.1",
    "ts-jest": "^27.1.4",
    "ts-standard": "^11.0.0",
    "typescript": "^4.6.3",
    "ui5-test-runner": "^1.1.4"
  },
  "ts-standard": {
    "env": [
      "node",
      "jest"
    ],
    "project": "./tsconfig.json",
    "ignore": [
      ".vscode/",
      "./dist/",
      "./test/"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "cacheDirectory": "./tmp/jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "\\.test\\.ts$",
      "\\.js$"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "sqlite\\.ts$",
      "\\.test\\.ts$",
      "./src/index\\.ts",
      "./src/ui/.*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
